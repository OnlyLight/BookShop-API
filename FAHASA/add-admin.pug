#add-theloai.hidden-xs
  .container
    h3.text-center Th&ecirc;m M&#x1EDB;i ADMIN
    .row
      .col-sm-3
      .col-sm-6
        form
          .input-group
            label Email
            input.form-control.input-custom(type='email', name='email-admin', autocomplete='off', required)
          br
