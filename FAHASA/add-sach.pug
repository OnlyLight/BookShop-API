// CONTENT
#add-theloai.hidden-xs
  .container
    .content
      h3.text-center Thêm Sách Mới
      .row
        .col-sm-1
        .col-sm-10
          form#data(enctype="multipart/form-data")
            .row
              .col-sm-6
                .input-group
                  label Tên Sách
                  input.form-control(type='text', name='tensach', required)
                br
                .input-group
                  label Hình Ảnh
                  input#file.form-control(type='file', name='file', required)
                br
                .input-group
                  label Giá Sách
                  input.form-control(type='number', min="0", name='gia', required)
                br
                .input-group
                  label Tác Giả
                  input.form-control(type='text', name='tacgia', required)
                br
                .input-group
                  label Số Trang
                  input.form-control(type='number', min="0", name='sotrang', required)
                br
                .input-group
                  label Kích Thước
                  input.form-control(type='text', name='kichthuoc', required)
                br
                .input-group
                  label Hình Thức
                  input.form-control(type='text', name='hinhthuc', required)
                br
              .col-sm-6
                .input-group
                  label Tên Nhà Cung Cấp
                  input.form-control(type='text', name='tennhacc', required)
                br
                .input-group
                  label Nhà Xuất Bản
                  input.form-control(type='text', name='nxb', required)
                br
                .input-group
                  label Năm Xuất Bản
                  input.form-control(type='number', min="0", name='namxuatban', required)
                br
                .input-group
                  label Ngôn ngữ
                  input.form-control(type='text', name='ngonngu', required)
                br
                .input-group
                  label Tình Trạng
                  input.form-control(type='text', name='tinhtrang', required)
                br
                label Nổi bật
                br
                input#yes(type='radio', name='noibat', value='1')
                label(for="yes") Nổi bật &nbsp;&nbsp;&nbsp;
                input#no(type='radio', name='noibat', value='0', checked="checked")
                label(for="no") Không
                br
                br
                label Thể Loại Sách &nbsp;&nbsp;
                select#load-category(name='matheloai')
                  option(value='volvo') Volvo
                  option(value='saab') Saab
                  option(value='mercedes') Mercedes
                  option(value='audi') Audi

            .row
              .col-sm-12
                .input-group
                  label Review Sách
                  textarea.form-control(name='review', required)
            br
            .text-center
              button#btn-add-sach.btn.btn-lg.btn-success(type='submit') Thêm Sách
        .col-sm-1
// /CONTENT
include footer