// CONTENT
#content-dangki.hidden-xs
  .container#info-search
    .title1
      .gachchan
        span Bạn chưa có tài khoản? Đăng kí ngay
    .dangki
      .row
        .col-sm-8
          .dangki-left
            .left-title
              .gachchan
                span ĐĂNG KÍ TÀI KHOẢN
            div
              form#submit
                label Họ và Tên
                input(type='text', name='name-sign-in', autocomplete='off', required)
                br
                label User name
                input(type='text', name='username-sign-in', autocomplete='off', required)
                br
                label Email
                input(type='email', name='email-sign-in', autocomplete='off', required)
                br
                label Mật khẩu
                input(type='password', name='password-sign-in', autocomplete='off', required)
                br
                label Giới tính
                input#male(type='radio', name='gender-sign-in' value='0', checked="checked")
                label(for="male") Nam &nbsp;&nbsp;&nbsp;
                input#female(type='radio', name='gender-sign-in' value='1')
                label(for="female") Nữ
                br
                label
                button#btn-sign-up ĐĂNG KÝ
        .col-sm-4
          .dangki-right
            .text-center
              span &Dstrok;&abreve;ng nh&#x1EAD;p b&#x1EB1;ng t&agrave;i kho&#x1EA3;n kh&aacute;c
          .col-sm-12
            br
            a(href='')
              img.img-dangki(src='../uploads/images/dangki/google.jpg')
            br
          .col-sm-12
            a(href='')
              img.img-dangki(src='../uploads/images/dangki/facebook.jpg')
  .text-dangki
    span(style='font-size: 20px; font-weight: 600') Benefits of becoming a registered member
    br
    br
    ul(style='color: #3c3c3c')
      li Log in at any time to check order statuses
      li Personalize your shopping
      li Speed up future purchases
#content-dangki-xs.visible-xs
  .container-fluid
    .content
      .div-title
        .title
          span &Dstrok;&Abreve;NG K&Yacute; T&Agrave;I KHO&#x1EA2;N
      form(action='', method='post')
        .input-group
          .input-group-addon
            span.glyphicon.glyphicon-user
          input.form-control(type='text', name='name', placeholder='Họ và tên', autocomplete='off')
          br
        .input-group
          .input-group-addon
            span.glyphicon.glyphicon-envelope
          input.form-control(type='email', name='email', placeholder='Email của bạn', autocomplete='off')
          br
        .input-group
          .input-group-addon
            span.glyphicon.glyphicon-lock
          input.form-control(type='password', placeholder='Mật khẩu', name='pass', autocomplete='off')
          br
        .input-group
          .input-group-addon
            span.glyphicon.glyphicon-refresh
          input.form-control(type='password', name='repass', placeholder='Nhập lại mật khẩu', autocomplete='off')
          br
        .input-group
          .input-group-addon
            span.glyphicon.glyphicon-list-alt
          input.form-control(type='text', name='birthday', placeholder='yyyy - mmmm - dddd', autocomplete='off')
          br
        label Gi&#x1EDB;i t&iacute;nh
        br
        input(type='radio', name='gender')
        |  Nam &nbsp;&nbsp;&nbsp;
        input(type='radio', name='gender')
        |  N&#x1EEF; 
        br
        br
        button.btn.btn-success.btn-block(type='submit') &Dstrok;&Abreve;NG K&Iacute;
        br
        br
        .title-gachchan.text-center
          span &Dstrok;&abreve;ng nh&#x1EAD;p b&#x1EB1;ng t&agrave;i kho&#x1EA3;n kh&aacute;c
        .img-dangki
          .img-1
            a(href='')
              img.img-end(src='../uploads/images/dangki/google.jpg')
          br
          .img-1
            a(href='')
              img.img-end(src='../uploads/images/dangki/facebook.jpg')
